@model Dominios.Livro
@{
    ViewBag.Title = "BuscaCategoria";
}

<div class="form-horizontal">
    <h4>Selecione um cliente e clique em buscar </h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.categoria.nomeCategoria, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.categoria.idCategoria, ViewBag.Lista as SelectList, "Selecione o Cliente",
            htmlAttributes: new { @class = "form-control" })

        </div>
    </div>

