@model IEnumerable<Dominios.Usuario>



<section class="layout-content">

    <nav class="navbar navbar-expand-md bg-light">
        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <i class="fas fa-caret-right"></i>
                    <span>Consultar Clientes</span>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <div id="list-home" class="row">
            <div class="col-4">
                <h1>Lista de Clientes</h1>

            </div>
        </div>
        <div class="table-responsive">

            <table class="table table-striped table-hover table-sm">

                <thead class="thead-dark">

                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Cargo</th>
                        <th>Senha</th>
                        <th>Data Nascimento</th>
                        <th>Endereço</th>
                        <th>Data de Entrada</th>
                        <th>Data de Saída</th>
                        <th>Situação</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in Model)
                    {
                        <tr>
                            <td>@usuario.IdUsu</td>
                            <td>@usuario.NomeUsu</td>
                            <td>@usuario.Cargo</td>
                            <td>
                                <button type="button" class="btn btn-secondary btn-sm" data-container="body"
                                        data-toggle="popover" data-placement="top"
                                        data-content="@usuario.Senha">
                                    <span class="fas fa-eye" title="Visualizar" aria-hidden="true"></span>
                                </button>
                            </td>
                            <td>@usuario.DataNasc</td>
                            <td>
                                <button type="button" class="btn btn-secondary btn-sm" data-container="body"
                                        data-toggle="popover" data-placement="top"
                                        data-content="@usuario.NomeUsu">
                                    <span class="fas fa-eye" title="Visualizar" aria-hidden="true"></span>
                                </button>
                            </td>
                            <td>@usuario.DataNasc</td>
                            <td></td>
                            <td>Ativo</td>
                            <td colspan="2">
                                <a class="btn btn-info btn-sm" href="/funcionarios/funcionarios" role="button">
                                    <span class="fas fa-edit" title="Editar" aria-hidden="true"></span>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

</section>
