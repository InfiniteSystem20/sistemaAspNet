@model IEnumerable<Dominios.Cliente>

<section class="layout-content">

    <nav class="navbar navbar-expand-md bg-light">
        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <i class="fas fa-caret-right"></i>
                    <span>Relatório de Clientes</span>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <div id="list-home" class="row">
            <div class="col-5">
                <h1>Relatório de Clientes</h1>

            </div>
        </div>
        <div class="table-responsive">

            <table id="relatorio" class="table table-striped table-hover table-sm">

                <thead class="thead-dark">

                    <tr>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>CPF</th>
                        <th>Telefone</th>
                        <th>CEP</th>
                        <th>Endereço</th>
                        <th>Bairro</th>
                        <th>Cidade</th>
                        <th>UF</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cliente in Model)
                    {
                        <tr>
                            <td>@cliente.nome_cli</td>
                            <td>@cliente.email_cli</td>
                            <td>@cliente.cpf_cli</td>
                            <td>@cliente.telefone_cli</td>
                            <td>@cliente.cep_cli</td>
                            <td>@cliente.endereco_cli</td>
                            <td>@cliente.bairro_cli</td>
                            <td>@cliente.cidade_cli</td>
                            <td>@cliente.uf_id_est</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

<!-- Exportar Jquery: EXCEL / PDF /  -->

<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script> <!-- tudo -->
<script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script> <!-- layout button -->
<script src="https://cdn.datatables.net/buttons/1.5.2/js/dataTables.buttons.min.js"></script> <!-- layout button -->
<script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.bootstrap4.min.js"></script> <!-- layout button -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script> <!-- Excel -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script> <!-- PDF -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script> <!-- PDF -->
<script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.html5.min.js"></script><!-- Buton export -->
<script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.print.min.js"></script><!-- s/efeito -->
<script src="https://cdn.datatables.net/buttons/1.5.2/js/buttons.colVis.min.js"></script> <!-- s/efeito -->
<script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script> <!-- s/efeito -->
<script src="https://cdn.datatables.net/responsive/2.2.3/js/responsive.bootstrap4.min.js"></script> <!-- s/efeito -->
<script>
    $(document).ready(function () {
        var table = $('#relatorio').DataTable({
            lengthChange: false,
            paging: false,
            searching: false,
            ordering: false,
            info: false,
            buttons: ['excel']
        });

        table.buttons().container()
            .appendTo('#relatorio_wrapper .col-md-6:eq(0)');
    });
</script>
