@model IEnumerable<Dominios.Produto>

<section class="layout-content">

    <nav class="navbar navbar-expand-md bg-light">
        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <i class="fas fa-caret-right"></i>
                    <span>Lista de Clientes</span>
                </li>
            </ul>
            <a class="btn btn-outline-primary" href="/Clientes/cadastrar" role="button">
                <span class="fas fa-user-plus" title="Cadastro" aria-hidden="true"></span>
                <span>Cadastrar Cliente</span>
            </a>
        </div>
    </nav>

    <div class="container">
        <div id="list-home" class="row">
            <div class="col-4">
                <h1></h1>
            </div>
        </div>
        <div class="table-responsive">

            <table id="ListaClientes" class="table table-striped table-hover table-sm">

                <thead class="thead-dark">

                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Marca</th>
                        <th>Quantidade</th>
                        <th>Valor</th>                        
                        <
                        @*<th>Cidade</th>
                            <th>UF</th>
                            <th>Email</th>*@
                        <th>Ação</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var produto in Model)
                    {
        <tr>
            <td>@produto.idProduto</td>
            <td>@produto.nomeProd</td>
            <td>@produto.marcaProd</td>
            <td>@produto.quantidade</td>
            <td>@produto.preco</td>

            
            <td colspan="2">
                <a class="btn btn-info btn-sm" href="/Clientes/ConsultarClientesId/@produto.idProduto" role="button">
                    <span class="fas fa-info-circle" title="Detalhes" aria-hidden="true"></span>
                </a>
                <a class="btn btn-info btn-sm" href="/Clientes/AtualizarCliente/@produto.idProduto" role="button">
                    <span class="fas fa-edit" title="Atualizar" aria-hidden="true"></span>
                </a>

                <a class="btn btn-info btn-sm" href="/Clientes/Delete/@produto.idProduto" role="button">
                    <span class="fas fa-trash-alt" title="Excluir" aria-hidden="true"></span>
                </a>
                
        </tr>}
                </tbody>
            </table>
        </div>

    </div>

</section>

<h2>ConsultarTodosProdutos</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nomeProd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.marcaProd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.quantidade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.preco)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nomeProd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.marcaProd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.quantidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.preco)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.idProduto }) |
            @Html.ActionLink("Details", "Details", new { id=item.idProduto }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.idProduto })
        </td>
    </tr>
}

</table>
