@model IEnumerable<Dominios.Produto>

<section class="layout-content">

    <nav class="navbar navbar-expand-md bg-light">
        <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <i class="fas fa-caret-right"></i>
                    <span>Lista de Produtos</span>
                </li>
            </ul>
            <a class="btn btn-outline-primary" href="/Produtos/cadastrar" role="button">
                <span class="fas fa-user-plus" title="Cadastro" aria-hidden="true"></span>
                <span>Cadastrar Produtos</span>
            </a>
        </div>
    </nav>

    <div class="container">
        <div id="list-home" class="row">
            <div class="col-4">
                <h1></h1>
            </div>
        </div>
        <div class="table-responsive">

            <table id="ListaClientes" class="table table-striped table-hover table-sm">

                <thead class="thead-dark">

                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Marca</th>
                        <th>Quantidade</th>
                        <th>Valor</th> 
                       
                        <
                        @*<th>Cidade</th>
                            <th>UF</th>
                            <th>Email</th>*@
                        <th>Ação</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var produto in Model)
                    {
                    <tr>
                        <td>@produto.idProduto</td>
                        <td>@produto.nomeProd</td>
                        <td>@produto.marcaProd</td>
                        <td>@produto.quantidade</td>
                        <td>R$ @produto.preco</td>
                       


                        <td colspan="2">
                            <a class="btn btn-info btn-sm" href="/Produtos/ConsultarProdutoId/@produto.idProduto" role="button">
                                <span class="fas fa-info-circle" title="Detalhes" aria-hidden="true"></span>
                            </a>
                            <a class="btn btn-info btn-sm" href="/Produtos/AtualizarProduto/@produto.idProduto" role="button">
                                <span class="fas fa-edit" title="Atualizar" aria-hidden="true"></span>
                            </a>

                            <a class="btn btn-info btn-sm" href="/Produtos/Delete/@produto.idProduto" role="button">
                                <span class="fas fa-trash-alt" title="Excluir" aria-hidden="true"></span>
                            </a>

                    </tr>}
                </tbody>
            </table>
        </div>

    </div>

</section>


